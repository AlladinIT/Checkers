@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of saved Options</h1>

<p>
    <a asp-page="Create" class="btn btn-primary btn-lg" >Create New Options</a>
</p>


<br/>


<div class="row">
    <div class="col-md-4">
        <form method="get">
            <div class="form-group">
                <label asp-for="Search" class="control-label"><h2>Search</h2></label>
                <input asp-for="Search" class="form-control"/>
            </div>

            <div class="form-group">
                <input type="image" src="css/img/search.png" width="64px" height="64px" alt="Search"/>
            </div>

        </form>
    </div>
</div>

<br/>


<table class="table table-warning table-hover my-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].Height)
            </th>
            <th>
                Rows of pieces
            </th>
            <th>
                Black starts
            </th>
            <th>
                Capturing is Mandatory
            </th>
            <th>
                Flying Kings 
            </th>
            <th>
                Pieces capturing forward and backwards
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CheckersOption) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowsOfPieces)
            </td>
            <td>
                @if (item.BlackStarts)
                {
                    <img src="css/img/yes.png" width="64px" height="64px" alt="Yes">
                }
                else
                {
                    <img src="css/img/no.png" width="64px" height="64px" alt="No">
                }
            </td>
            <td>
                @if (item.CapturingIsMandatory)
                {
                    <img src="css/img/yes.png" width="64px" height="64px" alt="Yes">
                }
                else
                {
                    <img src="css/img/no.png" width="64px" height="64px" alt="No">
                }
            </td>
            <td>
                @if (item.FlyingKings)
                {
                    <img src="css/img/yes.png" width="64px" height="64px" alt="Yes">
                }
                else
                {
                    <img src="css/img/no.png" width="64px" height="64px" alt="No">
                }
            </td>
            <td>
                @if (item.PiecesCapturingForwardAndBackward)
                {
                    <img src="css/img/yes.png" width="64px" height="64px" alt="Yes">
                }
                else
                {
                    <img src="css/img/no.png" width="64px" height="64px" alt="No">
                }
            </td>
            <td>
                @*<a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>*@
                <a asp-page="./Delete" asp-route-id="@item.Id"><img src="css/img/delete.png" width="64px" height="64px" alt="delete"></a>
            </td>
        </tr>
}
    </tbody>
</table>
