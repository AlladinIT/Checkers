@page
@using Domain
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <a asp-page="Index"><img src="/css/img/goback.png" alt="Go back" width="64" height="64"/></a>
</div>

<h1>Create</h1>

<h2>CheckersGame</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckersGame.Name" class="control-label"><h4>Name:</h4></label>
                <input asp-for="CheckersGame.Name" class="form-control" />
                <span asp-validation-for="CheckersGame.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.Player1Name" class="control-label"><h4>Player-1 Name (Black):</h4></label>
                <input asp-for="CheckersGame.Player1Name" class="form-control" />
                <span asp-validation-for="CheckersGame.Player1Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.Player1Type" class="control-label"><h4>Player-1 Type:</h4></label>
                <select asp-for="CheckersGame.Player1Type" class="form-select" asp-items="Html.GetEnumSelectList<EPlayerType>()"></select>
                <span asp-validation-for="CheckersGame.Player1Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.Player2Name" class="control-label"><h4>Player-2 Name (Red):</h4></label>
                <input asp-for="CheckersGame.Player2Name" class="form-control" />
                <span asp-validation-for="CheckersGame.Player2Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.Player2Type" class="control-label"><h4>Player-2 Type:</h4></label>
                <select asp-for="CheckersGame.Player2Type" class="form-select" asp-items="Html.GetEnumSelectList<EPlayerType>()"></select>
                <span asp-validation-for="CheckersGame.Player2Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.CheckersOptionId" class="control-label"><h4>Available Options:</h4></label>
                <select asp-for="CheckersGame.CheckersOptionId" class ="form-select" asp-items="Model.OptionsSelectList"></select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
